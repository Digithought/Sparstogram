  "author": "Nathan T. Allan",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.22",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.9",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "digitree": "^1.1.0"
  }
